#login-card
  .card
    .card-header
      %h1
        Login
    .card-body
      %form#login_form.m-t{action: login_path, role: "form"}
        .form-group
          %label
            Enter Federation address OR Public Stellar Key
          %input#public-key.form-control.form-control-lg{name: "public_key", placeholder: "Enter Public Key", type: "text"}/
        .row
          .col
            .mb-2.mx-auto.text-center
              = recaptcha_tags
          .col.my-auto#login-btn
            %button.btn.btn-brown.btn-lg{type: "submit"} Login
          .col.my-auto
            = link_to "New User? Create New Stellar Account.", new_account_path, class: "btn"
    #login-footer.card-footer.text-center
      = link_to "https://github.com/cryptomover-software/stellar-rails-wallet", target: "_blank" do
        %i.fab.fa-github.fa-3x
